import java.util.ArrayList;
public class shuzu {
    public static void main(String[] args) {
        ArrayList<Integer> a1 = new ArrayList<Integer>();
        ArrayList<Float> a2 = new ArrayList<Float>();
        ArrayList<Object> a3 = new ArrayList<Object>();
        int a = 1;                       //声明和定义四种数据类型
        float b = 2.1f;
        String c = "abc";
        double d = 10.2;
        if (c instanceof String) {               //判断c是否属于String类型
            System.out.println("先判断c是否为字符串");
            System.out.println("loading...");
            System.out.println("c是字符串，被pass！");
        }
        int f = (int) a;                      //强制转换int类型
        if (f == a && f != b && f != d) {
            System.out.println("a为整数型");
        }
        ;
        float g = (float) b;                //强制转换浮点型
        if (g != a && g == b & g != d) {
            System.out.println("b为float型");
        }
        double h =(double) d;
        if(h!=a&&h!=b&&h==d){
            System.out.println("d为双精度，被pass！");
        }
        a1.add(a);               //添加元素
        a2.add(b);
        System.out.println(a1+""+a2);           //打印筛选出来的元素
    }

}
